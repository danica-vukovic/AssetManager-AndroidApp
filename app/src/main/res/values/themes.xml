<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AssetManager" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_400</item>
        <item name="colorPrimaryVariant">@color/primary_600</item>
        <item name="colorOnPrimary">@color/primary_50</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_400</item>
        <item name="colorSecondaryVariant">@color/secondary_600</item>
        <item name="colorOnSecondary">@color/primary_50</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="searchViewStyle">@style/SearchViewStyle</item>
    </style>
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">@color/secondary_500</item>
    </style>

    <style name="Theme.AssetManager.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AssetManager.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AssetManager.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>